<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.pdsd.lab04.contactsmanager.ContactsManagerActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_additional"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Show additional info" />

    <EditText
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:ems="10"
        android:hint="Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_jobtitle"
        android:layout_alignRight="@+id/text_jobtitle"
        android:layout_below="@+id/text_jobtitle"
        android:ems="10"
        android:enabled="false"
        android:hint="Phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_company"
        android:layout_alignRight="@+id/text_company"
        android:layout_below="@+id/text_company"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_website"
        android:layout_alignRight="@+id/text_website"
        android:layout_below="@+id/text_website"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="Save" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="Cancel" />
    </LinearLayout>

     </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/text_jobtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Job Title" />

        <EditText
            android:id="@+id/text_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_jobtitle"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_jobtitle"
            android:ems="10"
            android:hint="Company" />

        <EditText
            android:id="@+id/text_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_company"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_company"
            android:ems="10"
            android:hint="Website" />

        <EditText
            android:id="@+id/text_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_website"
            android:layout_alignRight="@+id/text_website"
            android:layout_below="@+id/text_website"
            android:ems="10"
            android:hint="IM" />
    </LinearLayout>
    
</RelativeLayout>